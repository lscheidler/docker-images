deb https://deb.debian.org/debian {{ distribution }} main
deb-src https://deb.debian.org/debian {{ distribution }} main

{% if distribution not in ["testing", "unstable"] %}
deb https://deb.debian.org/debian-security {{ distribution }}/updates main
deb-src https://deb.debian.org/debian-security {{ distribution }}/updates main

# {{ distribution }}-updates, previously known as 'volatile'
deb https://deb.debian.org/debian {{ distribution }}-updates main
deb-src https://deb.debian.org/debian {{ distribution }}-updates main

# {{ distribution }}-backports, previously on backports.debian.org
deb https://deb.debian.org/debian {{ distribution }}-backports main
deb-src https://deb.debian.org/debian {{ distribution }}-backports main
{% endif %}
